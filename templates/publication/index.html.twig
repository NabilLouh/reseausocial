{% extends "base.html.twig" %}

{% block body %}
    <h1>Bienvenue sur mon reseau social</h1>

    {% for publication in publications %}
        <div>
            <h2>{{publication.contenu}}</h2>
            <p>de {{publication.utilisateur.name}} le {{publication.getDatecreation() | date('d-m-Y')}}</p>
            <h5>Commentaire : </h5>
            {% for commentaire in commentaires %}
                {% if commentaire.publication.id == publication.id %}
                    <p>{{ commentaire.contenu }}</p>
                    <p>de {{ commentaire.utilisateur.name}} le {{commentaire.getDatecreation() | date('d-m-Y')}}</p>
                {% endif %}
            {% endfor %}
        </div>

    {% endfor %}
{% endblock %}
